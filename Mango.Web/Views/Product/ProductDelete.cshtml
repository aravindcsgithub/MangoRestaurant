@model Mango.Web.Models.ProductDto
@{
    ViewData["Title"] = "Delete Product";
}
<div class="container p-4">
    <div class="row">
        <div class="col">
            <h3>Delete Product</h3>
        </div>
        <div class="col text-end">
            <a asp-action="ProductIndex" class="btn btn-outline-info"><i class="fas fa-arrow-left"></i> Back to Products</a>
        </div>
    </div>
    <div class="col-md-12 mt-3">
        <form asp-action="ProductDelete">
            <input asp-for="ProductId" type="hidden" />
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-12 pb-3">
                        <label class="form-control">@Model.Name</label>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-12 pb-3">
                        <label class="form-control">@Model.CategoryName</label>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-12 pb-3">
                        <label class="form-control">@Model.Description</label>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-12 pb-3">
                        <label class="form-control">@Model.ImageUrl</label>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <label asp-for="Price" class="control-label pt-2" style="font-size:20px;"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-12 pb-3">
                        <label class="form-control">@Model.Price.ToString("c")</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-4">
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-8">
                        <input type="submit" value="Delete" class="btn btn-danger form-control" />
                    </div>
                </div>
                <div>
                </div>
            </div>
        </form>
    </div>
</div>
